<% provide(:title, t(".title")) %>
<h1><%= t(".title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", url: user_path(@user) %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.page.users.edit.avatar_path, target: "_blank" %>
    </div>
  </div>
</div>
