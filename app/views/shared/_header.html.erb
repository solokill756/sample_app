<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <%= link_to t("app.name"), root_path, class: "navbar-brand fw-bold", id: "logo" %>
        <div class="navbar-nav ms-auto">
            <%= link_to t("shared.header.home"), root_path, class: "nav-link text-white" %>
            <%= link_to t("shared.header.help"), help_path, class: "nav-link text-white" %>
            <%= link_to t("shared.header.microposts"), microposts_path, class: "nav-link text-white" %>
            <%= link_to t("shared.header.contact"), contact_path, class: "nav-link text-white" %>
            <% if logged_in? %>
                <li><%= link_to t("shared.header.users"), "#", class: "nav-link text-white" %></li>
                <li class="dropdown">
                    <%= link_to "#", class: "dropdown-toggle text-white nav-link account", "data-toggle": "dropdown" do %>
                        <%= t("shared.header.account") %>
                        <b class="caret"></b>
                    <% end %>
                <ul class="dropdown-menu">
                    <li><%= link_to t("shared.header.profile"), current_user %></li>
                    <li><%= link_to t("shared.header.settings"), edit_user_path(current_user) %></li>
                    <li><%= link_to t("all_users"), users_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to t("shared.header.log_out"), logout_path,  data: {turbo_method: :delete} %></li>
                </ul>
            </li>
            <% else %>
                <li><%= link_to t("shared.header.log_in"), login_path, class: "nav-link text-white" %></li>
            <% end %>
            <%= language_switch_link %>
        </div>
    </div>
</header>
